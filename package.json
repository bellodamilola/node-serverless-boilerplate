{
  "name": "blockchain-service-api",
  "version": "1.0.0",
  "description": "Platform to manage Blockchain related actions for Incoperate",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "build": "rm -rf dist && tsc",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' app.local.ts",
    "start:debug": "nodemon --inspect src/app.ts",
    "start": "npm run build && ts-node app.local.ts",
    "migration:generate": "npm run build && ts-node ./node_modules/typeorm/cli.js -f ./dist/ormconfig.js migration:generate -n $NAME",
    "migrate": "npm run build && ts-node ./node_modules/typeorm/cli.js -f ./dist/ormconfig.js migration:run",
    "migration:down": "npm run build && ts-node ./node_modules/typeorm/cli.js -f ./dist/ormconfig.js migration:revert",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "engines": {
    "npm": ">=9.0.0 <10.0.0",
    "node": ">=18.0.0 <19.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Incoperate/campaign_blockchain_service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Incoperate/campaign_blockchain_service/issues"
  },
  "homepage": "https://github.com/Incoperate/campaign_blockchain_service#readme",
  "dependencies": {
    "aws-sdk": "^2.1335.0",
    "aws-serverless-express": "^3.4.0",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^6.0.1",
    "joi-objectid": "^4.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.12",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "jsonwebtoken": "^9.0.0",
    "jwk-to-pem": "^2.0.5",
    "lodash": "^4.17.21",
    "axios": "^1.3.4",
    "aws-jwt-verify": "latest"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.4.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/aws-serverless-express": "^3.3.5",
    "@types/pg": "^8.6.6",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
